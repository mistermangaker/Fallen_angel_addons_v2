<?xml version="1.0" encoding="utf-8"?>
<Defs>
   
  <ScenarioDef ParentName="ScenarioBase">
    <defName>shamiaandfriends</defName>
    <label>shamia and friends</label>
    <description>Throughout the land there exist creatures that mimic angels in their appearance. These creatures are extremely charismatic and powerful. They form small cults surrounding themseleves. This is the story of one of those cults going out into the wilderness in search of a new home. </description>
    <scenario>
      <summary>a collection of interesting individuals</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>PlayerColony</factionDef>
      </playerFaction>
      <parts>

        <!-- Config pages -->
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns_Xenotypes">
          <def>ConfigurePawnsXenotypes</def>
          <pawnChoiceCount>14</pawnChoiceCount>
          <customSummary>1 angel 1 kitsune 1 voidbeing and a collection of other interesting individuals</customSummary>
          <overrideKinds>
            <li>
              <xenotype>Fallen_angel</xenotype>
              <pawnKind>ShamiaColonist</pawnKind>
            </li>
            <li>
              <xenotype>foxyfoxy</xenotype>
              <pawnKind>shiri</pawnKind>
            </li>
            <li>
              <xenotype>squidboi</xenotype>
              <pawnKind>Merperoni</pawnKind>
            </li>

          </overrideKinds>
          <xenotypeCounts>
            <li>
              <xenotype>Fallen_angel</xenotype>
              <count>1</count>
              <description>non-baby fallen angel</description>
              <requiredAtStart>true</requiredAtStart>
              <allowedDevelopmentalStages>Adult, Child</allowedDevelopmentalStages>
            </li>
            <li>
              <xenotype>foxyfoxy</xenotype>
              <count>1</count>
              <description>non-baby fox</description>
              
              <allowedDevelopmentalStages>Adult, Child</allowedDevelopmentalStages>
            </li>
            <li>
              <xenotype>squidboi</xenotype>
              <count>1</count>
              <description>non-baby squidboy</description>
              
              <allowedDevelopmentalStages>Adult, Child</allowedDevelopmentalStages>
            </li>
            <li>
              <xenotype>Baseliner</xenotype>
              <count>5</count>
            </li>
            <li>
              <xenotype>Baseliner</xenotype>
              <count>2</count>
              <allowedDevelopmentalStages>Child</allowedDevelopmentalStages>
            </li>
          </xenotypeCounts>
        </li>

        <!-- Game start dialog -->
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>uwu ur going to 2 die baka bleh!! ;P</text>
          <closeSound>GameStartSting</closeSound>
        </li>
                <!-- Player starting stuff spawn method-->
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>Standing</method>
        </li>

        <!-- Player pawns modifiers -->
        

        <!-- Player starting things -->
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Silver</thingDef>
          <count>2000</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Cloth</thingDef>
          <count>300</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>PsychiteTea</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>120</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineIndustrial</thingDef>
          <count>60</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ComponentIndustrial</thingDef>
          <count>50</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gun_BoltActionRifle</thingDef>
          <count>5</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Gun_Revolver</thingDef>
          <count>2</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MeleeWeapon_Knife</thingDef>
          <stuff>Plasteel</stuff>
          <count>6</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Apparel_FlakPants</thingDef>
          <count>2</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Apparel_FlakVest</thingDef>
          <count>2</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Apparel_AdvancedHelmet</thingDef>
          <stuff>Plasteel</stuff>
          <count>2</count>
        </li>
        <li Class="ScenPart_StartingAnimal">
          <def>StartingAnimal</def>
          <count>3</count>
          <bondToRandomPlayerPawnChance>1.0</bondToRandomPlayerPawnChance>
        </li>

        <!-- Scatter some things near player start -->
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>Steel</thingDef>
          <count>1200</count>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>700</count>
        </li>      

        <!-- Scatter some things anywhere -->
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>ShipChunk</thingDef>
          <allowRoofed>false</allowRoofed>
          <count>5</count>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>Steel</thingDef>
          <count>1000</count>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>20</count>
        </li>

        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>fallen_angel_LongSword</thingDef>
          <quality>Masterwork</quality>
        </li>

      </parts>
    </scenario>
  </ScenarioDef>
</Defs>